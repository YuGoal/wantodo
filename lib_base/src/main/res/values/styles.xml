<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="base_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/base_colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/base_transparent</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/base_colorPrimary</item>
    </style>

    <style name="base_MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/base_colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/base_transparent</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/base_colorPrimary</item>
        <!--各个控制控件的默认颜色-->
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/base_colorPrimary
        </item>
        <!--在无需多点触控的页面上，建议关闭多点触控-->
        <item name="android:splitMotionEvents">false</item>
        <!-- 禁止多点触控 -->
        <item name="android:windowEnableSplitTouch">false</item>

    </style>
    <!--    下进下出activity-->
    <style name="base_ThemeActivity" parent="base_AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/base_AnimationBottomActivity</item>
    </style>

    <style name="base_AnimationBottomActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/bottom_silent</item>
        <item name="android:activityCloseEnterAnimation">@anim/bottom_silent</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_out</item>
    </style>
    <!--Activity进场。出场动画-->
    <style name="base_AnimationRightActivity" parent="@android:style/Animation.Activity">
        <!--用于设置打开新的Activity并进入新的Activity展示的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <!--用于设置打开新的Activity并销毁之前的Activity展示的动画-->
        <item name="android:activityOpenExitAnimation">@anim/slide_right_silent</item>
        <!--用于设置关闭当前Activity进入上一个Activity展示的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_silent</item>
        <!--用于设置关闭当前Activity时展示的动画-->
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

