<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--toolbar popup_theme的样式-->
    <style name="popup_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--设置背景-->
        <item name="android:background">@color/transparent</item>
        <!--设置字体颜色-->
        <item name="android:textColor">@color/black</item>
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <!--修改toolbar的Title(大标题)颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--修改toolbar的subtitle(小标题)颜色-->
        <item name="subtitleTextColor">@color/colorAccent</item>
        <!--menu字体颜色-->
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <!--修改toolbar的图标颜色 三个点 ...-->
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <!--Toobar 菜单字体设置-->
    <style name="MenuTextStyle">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Toolbar_TextAppearance_White">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
       <!--Appbar背景色-->
        <item name="colorPrimary">@color/base_colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/base_white</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--在无需多点触控的页面上，建议关闭多点触控-->
        <item name="android:splitMotionEvents">false</item>
        <!-- 禁止多点触控 -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:configChanges">orientation|screenSize</item>
    </style>

    <style name="TAB" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Toolbar 主标题大小-->
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
</resources>
