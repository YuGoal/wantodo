<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_big"
        android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_def">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="隐私政策"
            android:textColor="@color/font_black"
            android:textSize="@dimen/text_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_def"
            android:overScrollMode="never"
            android:scrollbarSize="3dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar">

            <TextView
                android:id="@+id/dialog_privacy_policy_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_content"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_content" />

        </ScrollView>

        <TextView
            android:id="@+id/dialog_privacy_policy_tv_yes"
            style="@style/ButtonMain"
            android:layout_marginTop="@dimen/margin_middle"
            android:text="同意" />

        <TextView
            android:id="@+id/dialog_privacy_policy_tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_def"
            android:gravity="center"
            android:text="退出应用"
            android:textColor="@color/font_black"
            android:textSize="@dimen/text_content" />
    </LinearLayout>


</LinearLayout>